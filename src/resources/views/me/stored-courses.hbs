<div class="mt-4 stored-courses-header">
    <h2>Khóa học của tôi</h2>
</div>
<div class="mt-2 stored-courses-table">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.createdTime}}</td>
                <td>
                    <a href="/courses/{{this._id}}/edit" type="button" class="btn btn-link">Sửa</a>
                    <a href="#" type="button" class="btn btn-link">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>